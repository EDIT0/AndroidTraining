<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="5dp"
        android:end="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_100" />

            <corners
                android:bottomRightRadius="50dp"
                android:topRightRadius="50dp" />

            <size
                android:width="12dp"
                android:height="24dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:end="5dp"
        android:start="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/grey_900" />

            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</layer-list>