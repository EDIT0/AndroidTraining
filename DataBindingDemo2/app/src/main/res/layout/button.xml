<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="buttonViewModelInButton"
            type="com.example.databindingdemo2.viewmodel.ButtonViewModel" />

        <variable
            name="listenerEventInButton"
            type="com.example.databindingdemo2.ListenerEvent" />

        <variable
            name="textRecyclerViewModelInButton"
            type="com.example.databindingdemo2.viewmodel.TextRecyclerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button"
            android:id="@+id/btnButton"
            android:onClick="@{() -> listenerEventInButton.onClickListener(textRecyclerViewModelInButton)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
