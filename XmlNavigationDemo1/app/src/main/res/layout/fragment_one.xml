<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.fragment.OneFragment">

    <ScrollView
        android:id="@+id/svOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnBottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nOne\nTwo"
                android:textSize="30dp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnBottomNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BottomNav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svOne" />

</androidx.constraintlayout.widget.ConstraintLayout>